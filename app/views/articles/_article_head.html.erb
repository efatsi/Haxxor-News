<% article = object %>
<article class="votable">
  <% if can? :vote, article %>
    <div class="btn-group">
      <%= voting_button  :up, article %>
      <%= voting_button :down, article %>
    </div>
  <% end %>
  <h4>
    <%= link_to article.title, article.link %> <%= "(" + article.short_link + ")" %>
  </h4>

  <span class="points"><%= pluralize(article.points, "point") %></span><%= " by " %> <%= link_to article.username, user_path(article.user) %> <%="posted " + time_ago_in_words(article.created_at) + " ago" %>
  <%= " | " %>
  <%= link_to pluralize(article.comment_count, "comment"), article_path(article) %>
  <% if can? :manage, article %>
  	<%= " | "%><%= link_to "edit", edit_article_path(article)%><%= " | " %><%= link_to "delete", article_path(article), :method => :delete, :confirm => "Are you sure you want to delete this article?" %>
  <% end %><br />
</article>