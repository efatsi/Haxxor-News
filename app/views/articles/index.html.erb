<%= form_tag articles_path, :method => 'get' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search", :name => nil %>
<% end %>

<div class="btn-group">
  	<button class="btn">See Posts From</button>
  	<button class="btn dropdown-toggle" data-toggle="dropdown">
    	<span class="caret"></span>
  	</button>
  	<ul class="dropdown-menu">
	    <li><%= link_to "Today", articles_path(:this_day => "") %></li>
		<li><%= link_to "This Month", articles_path(:this_month => "") %></li>
		<li><%= link_to "This Year", articles_path(:this_year => "") %></li>
		<li><%= link_to "Forever", articles_path %></li>
		<li><%= link_to "Choose Time", pick_date_path %></li>
  	</ul>
</div>
<div class="btn-group">
  	<button class="btn">Arrange Posts By</button>
  	<button class="btn dropdown-toggle" data-toggle="dropdown">
    	<span class="caret"></span>
  	</button>
  	<ul class="dropdown-menu">
  		<li><%= link_to "Time", articles_path(:chronological => "") %></li>
		<li><%= link_to "Rating", articles_path(:by_rating => "") %></li>
  	</ul>
</div><br /><br /><br />

<table class="table table-striped">
	<thead>
	</thead>
	<tbody>
		<% @articles.each do |a| %>
		  <tr>
		    <td><h4><%= link_to a.title, a.link %> <%= "(" + a.short_link + ")" %></h4>
			<%= a.points.to_s + " points by " %> <%= link_to a.username, user_path(a.user) %> <%=", posted " + a.created_at.to_s(:mdy) + " | " %>
			<% if a.comment_count == 1 %>
				<%= link_to "1 comment", article_path(a) %></td>			
			<% else %>
				<%= link_to "#{a.comment_count} comments", article_path(a) %></td>
		  	<% end %>
		</tr>
		<% end %>
	</tbody>
</table>
<%= will_paginate @articles %>
</br>