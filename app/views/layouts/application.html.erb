<!DOCTYPE html>
<html>
<head>
  <title>HaxxorNews</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="well">
        <%= link_to "Home", articles_path %> | 
	    <%= link_to "submit", new_article_path %>
        	
		<p class="ident pull-right">
			<% if logged_in? %>
					Welcome, <%= current_user.username %> | <%= link_to "Logout", logout_path %>
			<% else %>
				<%= link_to 'Login', login_path %> | <%= link_to 'Signup', new_user_path %>
			<% end %>
		</p>
	</div>

	<% flash.each do |name, msg| %>
		<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			<a class="close" data-dismiss="alert">&times;</a>
			<%= msg %>
		</div>
    <% end %>

	<%= yield %>
</body>
</html>
